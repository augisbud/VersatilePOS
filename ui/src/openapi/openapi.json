        "/account/me": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Get account information for the currently authenticated user.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "account"
                ],
                "summary": "Get account information",
                "operationId": "getMyAccount",
                "responses": {
                    "200": {
                        "description": "OK",
